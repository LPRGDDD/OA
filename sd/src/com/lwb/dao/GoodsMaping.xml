<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.lwb.dao.GoodsDao">
	
	<select id="queryAll" resultType="Map">
		select * from tb_goods tg left join tb_goods_type tt on tg.typeId=tt.typeId
	</select>
	<select id="queryTypeAll" resultType="Map">
	    select * from tb_goods_type
	</select>
	<select id="queryID" resultType="Map">
	    select * from tb_goods g left join tb_goods_type t on g.typeId=t.typeId where goodsId= #{id}
	</select>
	<insert id="save">
	insert into tb_goods(goodsName,typeId,goodsDesc,goodsUnitPrice,goodsImageName,sellCount,goodsDate)
	values(#{goodsName},#{goodsType.typeId},#{goodsDesc},#{goodsUnitPrice},#{goodsImageName},#{sellCount},#{goodsDate});
	</insert>
</mapper>